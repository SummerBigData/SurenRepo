# Import the modules
import numpy as np
import matplotlib.pyplot as plt

xdat = open('ex2x.dat', 'r')
ydat = open('ex2y.dat', 'r')
x = xdat.split()
y = ydat.split()


# Print it
#print(xdat.read())
#print(ydat.read())

plt.plot(x,y)
plt.show()

# Close file
xdat.close()
ydat.close()

# Check whether file is closed
print(xdat.closed)
print(ydat.closed)
